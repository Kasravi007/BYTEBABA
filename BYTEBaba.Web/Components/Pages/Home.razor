@page "/"
@using System

<div class="container">
    <header class="hero">
        <h1>Welcome to ByteBaba</h1>
        <p>Your partner in IT Consulting, Service Provision, and Product Development</p>
        <button class="cta-button">Get Started</button>
    </header>

    <section id="services">
        <h2>Our Services</h2>
        <div class="service-cards">
            <div class="card">
                <h3>IT Consulting</h3>
                <p>Expert advice to optimize your IT infrastructure and strategy.</p>
            </div>
            <div class="card">
                <h3>Service Provision</h3>
                <p>Reliable and efficient IT services tailored to your needs.</p>
            </div>
            <div class="card">
                <h3>Product Development</h3>
                <p>Innovative solutions for web, mobile, and desktop applications.</p>
            </div>
        </div>
    </section>

    <section id="about">
        <h2>About Us</h2>
        <p>ByteBaba is a leading provider of IT solutions, offering a wide range of services to help businesses achieve their goals. Our team of experts specializes in consulting, service provision, and product development, ensuring that we deliver high-quality solutions tailored to your needs.</p>
    </section>

    <section id="portfolio">
        <h2>Our Work</h2>
        <div class="portfolio-gallery">
            <div class="portfolio-item">
                <img src="images/project1.jpg" alt="Project 1">
                <p>Project 1 Description</p>
            </div>
            <div class="portfolio-item">
                <img src="images/project2.jpg" alt="Project 2">
                <p>Project 2 Description</p>
            </div>
            <div class="portfolio-item">
                <img src="images/project3.jpg" alt="Project 3">
                <p>Project 3 Description</p>
            </div>
        </div>
    </section>

    <section id="contact">
        <h2>Contact Us</h2>
        <form>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <label for="message">Message:</label>
            <textarea id="message" name="message" required></textarea>
            <button type="submit">Send</button>
        </form>
        <p>Email: contact@bytebaba.com</p>
        <p>Phone: +91-9905016535</p>
        <p>Address: Devanahalli, Karnataka, India</p>
    </section>
</div>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    .hero {
        text-align: center;
        background: #2c3e50;
        color: white;
        padding: 50px 20px;
    }

    .cta-button {
        background: #e74c3c;
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        font-size: 1.2em;
    }

    .service-cards {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .card {
        background: #ecf0f1;
        padding: 20px;
        border-radius: 8px;
        width: 30%;
        text-align: center;
    }

    .portfolio-gallery {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .portfolio-item {
        width: 30%;
        text-align: center;
    }

        .portfolio-item img {
            width: 100%;
            border-radius: 8px;
        }

    form {
        display: flex;
        flex-direction: column;
        max-width: 600px;
        margin: 0 auto;
    }

    label {
        margin-top: 10px;
    }

    input, textarea {
        padding: 10px;
        margin-top: 5px;
        border-radius: 4px;
        border: 1px solid #bdc3c7;
    }

    button[type="submit"] {
        background: #3498db;
        color: white;
        padding: 10px;
        border: none;
        cursor: pointer;
        margin-top: 20px;
    }
</style>
